.Side-bar
  .User-name
    .Top-items
      %h3.Top-items__name
        = current_user.name
      %ul.Top-items__icons
        %li.Top-items__icon
          = link_to new_group_path  do
            = icon('far', 'edit', class: "Top-items__icon--white")
        %li.Top-items__icon
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: "Top-items__icon--white")
  .Group-list
    - current_user.groups.each do |group|
      .Group-box
        = link_to group_messages_path(group) do
          .Group-box__name
            = group.name
          .Group-box__message